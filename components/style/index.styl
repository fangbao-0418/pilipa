pilipa-prefix = pilipa
@import './animation.styl'

for num in (1..50)
  .mt-{num}
    margin-right: (num)px
  .mb-{num}
    margin-right: (num)px
  .ml-{num}
    margin-right: (num)px
  .mr-{num}
    margin-right: (num)px
.{pilipa-prefix}-btn
  padding: 5px 12px
  border-radius: 4px
  font-size: 14px
  outline: 0
  display: inline-block
  background-color: #fff
  border: 1px solid #ccc
  cursor: pointer
  user-select: none
.{pilipa-prefix}-btn-default
  &:hover
    color: #333;
    background-color: #e6e6e6
    border-color: #adadad
  &:active
    color: #333;
    background-color: #d4d4d4;
    border-color: #8c8c8c;
.{pilipa-prefix}-btn-warning
  color: #FFFFFF
  background-color: #f0ad4e;
  border-color: #eea236;
  &:hover
    background-color: #ec971f;
    border-color: #d58512;
  &:active
    color: #fff;
    background-color: #d58512;
    border-color: #985f0d;
.clickabled
  color: #337ab7
  cursor: pointer