pilipa-prefix = pilipa
@import './animation.styl'

for num in (1..50)
  .mt-{num}
    margin-right: (num)px
  .mb-{num}
    margin-right: (num)px
  .ml-{num}
    margin-right: (num)px
  .mr-{num}
    margin-right: (num)px
.{pilipa-prefix}-btn
  padding: 5px 12px
  border-radius: 4px
  font-size: 14px
  outline: 0
  display: inline-block
  background-color: #fff
  border: 1px solid #ccc
  cursor: pointer
  user-select: none
.{pilipa-prefix}-btn-default
  color: rgba(0,0,0,.65)
  background-color: #fff
  border-color: #d9d9d9
  &:hover
    color: #40a9ff;
    background-color: #fff;
    border-color: #40a9ff;
  &:active
    color: #096dd9;
    background-color: #fff;
    border-color: #096dd9;
.{pilipa-prefix}-btn-warning
  color: #FFFFFF
  background-color: #f0ad4e;
  border-color: #eea236;
  &:hover
    background-color: #ec971f;
    border-color: #d58512;
  &:active
    color: #fff;
    background-color: #d58512;
    border-color: #985f0d;
.pilipa-btn-primary
  color: #fff;
  background-color: #1890ff;
  border-color: #1890ff;
  &:hover
    background-color: #40a9ff;
    border-color: #40a9ff;
  &:active
    color: #fff;
    background-color: #096dd9;
    border-color: #096dd9;
.pilipa-clickabled
  color: #337ab7
  cursor: pointer