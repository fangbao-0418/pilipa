@import '../../style/index.styl'
dropdown-prefix = pilipa-prefix + '-dropdown'

@keyframes customSlideDownIn
  from
    opacity: 0
    transform-origin: 0% 0%
    transform: scaleY(.8)
  to
    opacity: 1
    transform-origin: 0% 0%
    transform: scaleY(1)
@keyframes customSlideDownOut
  from
    opacity: 1
    transform-origin: 0% 0%
    transform: scaleY(1)
  to
    opacity: 0
    transform-origin: 0% 0%
    transform: scaleY(.8)
.{dropdown-prefix}
  width: 200px
  position: relative
  height: 30px
  line-height: 30px
  font-size: 12px
  .hidden
    display: none
  .results
    position: absolute
    z-index 999
    width: 100%
    outline: none
    user-select: none
    padding: 5px 0px
    margin: 4px 0 0 0
    text-align: left
    background-color: #fff
    border-radius: 4px
    box-shadow: 0 1px 6px rgba(0,0,0,.2)
    background-clip: padding-box
    transition: all 300ms
    p
      margin: 0
      padding: 5px 10px
    .input
      position: relative
      display: inline-block
      padding: 4px 7px
      margin: 5px 5%
      width: 90%
      height: 28px
      line-height: 1.5
      color: rgba(0,0,0,.65)
      background-color: #fff
      background-image: none
      border: 1px solid #d9d9d9
      border-radius: 4px
      transition: all .3s
      float: initial
      &:focus
        outline: 0
        box-shadow: 0 0 0 2px rgba(16,142,233,.2)
        border-color: #49a9ee
      &:hover
        border-color: #49a9ee
    .items
      max-height: 240px
      overflow-y: scroll
      margin: 0
      padding: 0
      // &::-webkit-scrollbar
      //   width: 0
      position: relative
      ul
        margin: 0
        padding: 0
        li
          padding: 2px 10px
          margin: 0
          cursor: pointer
          transition: background-color 200ms
          text-overflow: ellipsis
          white-space: nowrap
          overflow: hidden
          line-height: 30px
          &.selected
            background: #efefef
          &.active
            background-color: #ecf6fd
  .custom-slide-up-enter
    animation-duration: 200ms
    animation-name: customSlideDownIn
    animation-timing-function: cubic-bezier(.23,1,.32,1)
    animation-fill-mode: both
    animation-play-state: running
  .custom-slide-up-leave
    animation-duration: 200ms
    animation-name: customSlideDownOut
    animation-timing-function: cubic-bezier(.755,.05,.855,.06)
    animation-fill-mode: both
    animation-play-state: running
  .costom-btn-group
    width: 100%
    height: 100%
    line-height: 100%
    box-sizing: border-box
    display: flex
    cursor: pointer
    user-select: none
    .btn-left
      float: left
      overflow: hidden
      flex: 1
      border: 1px solid rgb(217, 217, 217)
      box-sizing: border-box
      border-radius: 4px 0px 0px 4px / 4px 0px 0px 4px
      background-color: white
      align-items: center
      justify-content: center
      display: flex
      span
        text-align: center
        text-overflow: ellipsis
        overflow: hidden
        white-space: nowrap
        padding: 0 4px
      &:hover
        z-index: 2
        border: 1px solid #108ee9
    .btn-right
      background-color: white
      width: 30px
      float: right
      text-align: center
      margin-left: -1px
      display: flex
      justify-content: center
      align-items: center
      border: 1px solid rgb(217, 217, 217)
      border-radius: 0px 4px 4px 0px / 0px 4px 4px 0px
      &:hover
        z-index: 2
        border: 1px solid #108ee9
