.pilipa-web-uploader
  overflow: hidden
  background: #FFFFFF
  border-radius: 5px
  width: 900px
  .pilipa-web-uploader-header
    height: 42px
    line-height: 42px
    font-size: 18px
    font-weight: bold
    text-align: center
    background: #00bfe8
    box-shadow: 0px 1px 1px rgba(0,0,0,.4);
    border-radius: 4px;
    position: relative
    span 
      color: #FFFFFF
    .pilipa-web-uploader-close
      position: absolute
      right: 10px
      top: 50%
      transform: translateY(-50%)
      color: rgba(0, 0, 0, .42);
      font-size: 18px;
      cursor: pointer
      transition: all 80ms
      &:hover
        opacity: .7
  .pilipa-web-uploader-body
    padding: 20px
    .pilipa-web-uploader-drop-area
      height: 400px
      border: 2px #ccc dashed
      padding: 10px
      .pilipa-web-uploader-constructor
        height: 100%
        background: url('../../images/web-uploader-bg.png') center 24% no-repeat
        .pilipa-web-uploader-btn
          width: 168px
          height: 44px
          background: #00b7ee
          font-size: 18px
          text-align: center
          line-height: 44px
          color: #FFFFFF
          margin: 0 auto
          top: 44%;
          position: relative
          cursor: pointer
          border-radius: 4px
          &:hover
            opacity: .9
        p
          text-align: center
          color: #CCCCCC
          font-size: 16px
          position: relative
          margin: 0;
          top: 48%
      .pilipa-web-uploader-images
        height: 100%
        overflow-y: scroll
        ul
          list-style: none
          margin: 0
          padding: 0
          li
            width: 152px
            height: 152px
            display: inline-block
            padding: 6px
            position: relative
            overflow: hidden
            .pilipa-web-uploader-image-upload-status
              position: absolute
              bottom: 10px
              padding: 4px 6px
              font-size: 12px
              color: #FFFFFF
              text-align: ctenter
              border-radius: 4px
              left: 50%
              transform: translateX(-50%)
              &.success
                background: #52c41a
                color: #FFFFFF
              &.failed
                background: #f5222d
            .pilipa-web-uploader-imgage-mask
              background: #000
              position: absolute
              top: 0
              bottom: 0
              left: 0
              right: 0
              z-index: 10
              opacity: 0.2
              transition: opacity .2s ease-in
              &:hover
                opacity: .2
            img 
              width: 100%
              height: 100%
              box-shadow: 0px 0px 6px #ccc
              transition: all 200ms
            .pilipa-web-uploader-imgage-loading
              display: flex
              justify-content: center
              align-items: center
              width: 100%
              height: 100%
              position: absolute
              z-index 10px
              left: 0
              top: 0
              background: rgba(0,0,0,.2)
              i 
                font-size: 36px
                color: #333
            .pilipa-web-uploader-image-operate
              height: 30px
              position: absolute
              bottom: 0px
              left: 0px
              background: rgba(0,0,0,.5)
              width: 100%
              text-align: center
              color: #FFFFFF
              opacity: 0
              transition: all .2s ease-in
              z-index: 10
              i
                line-height: 30px
                margin: 0px 5px
                cursor: pointer
            &:hover
              .pilipa-web-uploader-image-operate
                opacity: 1
    .pilipa-web-uploader-border-white
      border-color: #FFFFFF
  .pilipa-web-uploader-footer
    overflow: hidden
    padding: 10px 20px
    border-top: 1px solid #ccc
    .pilipa-web-uploader-info
      font-size: 14px
      line-height: 40px
      float: left
    .pilipa-web-uploader-operate
      float: right
.pilipa-web-uploader-btn-default, .pilipa-web-uploader-btn-primary
  width: 90px
  height: 40px
  text-align: center
  display: inline-block
  vertical-align: top
  cursor: pointer
  font-size: 14px
  box-sizing: border-box
.pilipa-web-uploader-btn-default
  line-height: 38px
  border: 1px solid #cfcfcf
  transform: all 200ms
  color: #333
  &:hover
    opacity: .9
    border: 1px solid #cfcfcf
    background: rgba(0, 0, 0, .12)
.pilipa-web-uploader-btn-primary
  line-height: 40px
  background: #00b7ee
  color: #fff
  &:hover
    opacity: .8