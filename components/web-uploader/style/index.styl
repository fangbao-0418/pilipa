.pilipa-web-uploader
  overflow: hidden
  background: #FFFFFF
  border-radius: 4px
  width: 900px
  .pilipa-web-uploader-header
    height: 42px
    line-height: 42px
    font-size: 18px
    font-weight: bold
    text-align: center
    background: #00bfe8
    box-shadow: 0px 1px 1px rgba(0,0,0,.4);
    position: relative
    span 
      color: #FFFFFF
    .pilipa-web-uploader-shrink
      position: absolute
      right: 32px
      top: 50%
      transform: translateY(-50%)
      color: rgba(0, 0, 0, .42);
      cursor: pointer
      transition: all 80ms
      width: 14px
      height: 14px
      display: flex
      justify-content: center
      align-items: center
      background: #ffc069
      border-radius: 50%
      i
        font-size: 12px;
        font-weight: bold
        display: none
    .pilipa-web-uploader-close
      position: absolute
      right: 10px
      top: 50%
      transform: translateY(-50%)
      color: rgba(0, 0, 0, .42);
      font-size: 18px;
      cursor: pointer
      transition: all 80ms
      width: 14px
      height: 14px
      display: flex
      justify-content: center
      align-items: center
      background: #ff4d4f
      border-radius: 50%
      i
        font-size: 12px
        display: none
    .pilipa-web-uploader-shrink, .pilipa-web-uploader-close
      i
        font-style: normal;
      &:hover
        i
          display: block
  .pilipa-web-uploader-body
    padding: 20px
    .pilipa-web-uploader-mark
      font-size: 24px
      color: #ccc
      padding: 0
      margin: 0
    .pilipa-web-uploader-drop-area
      height: 400px
      border: 2px #ccc dashed
      padding: 10px
      .pilipa-web-uploader-constructor
        height: 100%
        background: url('../../images/web-uploader-bg.png') center 24% no-repeat
        .pilipa-web-uploader-btn
          width: 168px
          height: 44px
          background: #00b7ee
          font-size: 18px
          text-align: center
          line-height: 44px
          color: #FFFFFF
          margin: 0 auto
          top: 44%;
          position: relative
          cursor: pointer
          border-radius: 4px
          &:hover
            opacity: .9
        p
          text-align: center
          color: #CCCCCC
          font-size: 16px
          position: relative
          margin: 0;
          top: 48%
      .pilipa-web-uploader-images
        height: 100%
        overflow-y: scroll
        ul
          list-style: none
          margin: 0
          padding: 0
          li
            width: 152px
            height: 152px
            display: inline-block
            padding: 6px
            position: relative
            overflow: hidden
            .pilipa-web-uploader-image-upload-status
              position: absolute
              padding: 4px 6px
              font-size: 12px
              color: #FFFFFF
              border-radius: 4px
              top: 10px
              animation: pilipaWebUploadFadeIn .3s ease-in
              animation-fill-mode: both
              z-index: 1
              &.success
                background: #52c41a
                color: #FFFFFF
              &.failed
                background: #f5222d
            img 
              width: 100%
              height: 100%
              box-shadow: 0px 0px 6px #ccc
              transition: all 200ms
            .pilipa-web-uploader-imgage-uploading
              display: flex
              justify-content: center
              align-items: center
              position: absolute
              z-index 10px
              left: 6px
              right: 6px
              top: 6px
              bottom: 6px
              background: rgba(0,0,0,.6)
              .pilipa-web-uploader-pause
                i
                  font-size: 48px
                  color: #FFFFFF
              .pilipa-web-uploader-ring
                width: 70px
                height: 70px
                border-radius: 50%
                animation: pilipaRingToggle 2s linear infinite
                border: 8px solid #ffffff
              span 
                color: #FFFFFF
                font-weight: bold
                position: absolute
                font-size: 20px
            .pilipa-web-uploader-image-operate
              height: 30px
              position: absolute
              bottom: 6px
              left: 6px
              right: 6px
              background: rgba(0,0,0,.5)
              text-align: center
              color: #FFFFFF
              opacity: 0
              transition: all .2s ease-in
              z-index: 10
              i
                line-height: 30px
                margin: 0px 5px
                cursor: pointer
            &:hover
              .pilipa-web-uploader-image-operate
                opacity: 1
    .pilipa-web-uploader-border-white
      border-color: #FFFFFF
  .pilipa-web-uploader-footer
    overflow: hidden
    padding: 20px 0px
    margin: 0 20px
    border-top: 1px solid #ccc
    .pilipa-web-uploader-info
      font-size: 13px
      float: left
      height: 40px
      display: flex
      align-items: center
      color: #666
      p
        b
          margin: 0px 3px
      .pilipa-web-uploader-percentage
        width: 120px
        height: 20px
        border-radius: 4px
        border: 1px solid #1483d8
        position: relative
        span 
          position: absolute
          line-height: 20px
          width: 100%
          text-align: center
          color: #6dbfff
        .pilipa-web-uploader-percentage-solid
          background: #1483d8
          height: 20px
          float: left
          transition: width 100ms linear
    .pilipa-web-uploader-operate
      float: right
.pilipa-web-uploader-btn-default, .pilipa-web-uploader-btn-primary
  width: 90px
  height: 40px
  text-align: center
  display: inline-block
  vertical-align: top
  cursor: pointer
  font-size: 14px
  box-sizing: border-box
.pilipa-web-uploader-btn-default
  line-height: 38px
  border: 1px solid #cfcfcf
  transform: all 200ms
  color: #333
  &:hover
    opacity: .9
    border: 1px solid #cfcfcf
    background: rgba(0, 0, 0, .12)
.pilipa-web-uploader-btn-primary
  line-height: 40px
  background: #00b7ee
  color: #fff
  &:hover
    opacity: .8
.pilipa-web-uploader-show-images
  max-width: 1240px
  margin-bottom: 100px
  width: auto !important
  text-align: center
  border: none !important
  background: transparent !important
  box-shadow: none !important
  .pilipa-modal-body
    padding: 0 !important
    .pilipa-webuploader-images
      border-radius: 4px
      transition: all 1s
      img
        background: #fff
        padding: 20px
.pilipa-web-uploader-modal
  .pilipa-modal-body
    padding: 0 !important
.pilia-web-uploader-menu
  background: orange 
  position: fixed
  top: 100px
  right: 0
  width: 20px
  padding: 4px
  text-align: center
  color: #ffffff
  font-size: 14px
  cursor: pointer
  opacity: 0
  i
    font-weight: bold
    font-size: 16px