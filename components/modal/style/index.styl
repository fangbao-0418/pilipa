@import '../../style'
modal-prefix = pilipa-prefix + '-modal'
.{modal-prefix}
  .{modal-prefix}-mask
    position: fixed
    top: 0
    right: 0
    left: 0
    bottom: 0
    background-color: #373737
    background-color: rgba(0, 0, 0, 0.65)
    height: 100%
    z-index: 1000
  .{modal-prefix}-wrap 
    position: fixed
    overflow: auto
    top: 0
    right: 0
    bottom: 0
    left: 0
    z-index: 1000
    -webkit-overflow-scrolling: touch
    outline: 0
    .{modal-prefix}-content
      min-width: 500px
      background: #FFFFFF
      border-radius: 4px
      position: absolute
      top: 100px
      left: 50%
      transform: translateX(-50%)
      border: 1px solid rgba(0,0,0,.32)
      box-shadow: 0 3px 9px rgba(0,0,0,.5)
      .{modal-prefix}-header
        padding: 15px 20px
        line-height: 20px
        border-bottom: 1px solid #e5e5e5
        overflow: hidden
        .{modal-prefix}-title
          font-size: 16px
          font-weight: 500
          color: rgba(0, 0, 0, 0.85)
          float: left
        .{modal-prefix}-close
          float: right
          cursor: pointer
          font-size: 21px
          opacity: .2
          font-weight: 700
      .{modal-prefix}-body
        padding: 20px
      .{modal-prefix}-footer
        padding: 15px 20px
        text-align: right
        border-top: 1px solid #e5e5e5