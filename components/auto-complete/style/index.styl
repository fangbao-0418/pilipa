@import '../../style'
auto-complete-prefix = pilipa-prefix + '-auto-complete'
@keyframes customSlideDownIn
  from
    opacity: 0
    transform-origin: 0% 0%
    transform: scaleY(.8)
  to
    opacity: 1
    transform-origin: 10% 10%
    transform: scaleY(1)
@keyframes customSlideDownOut
  from
    opacity: 1
    transform-origin: 0% 0%
    transform: scaleY(1)
  to
    opacity: 0
    transform-origin: 10% 10%
    transform: scaleY(.8)
.{auto-complete-prefix}
  width: 200px
  position: relative
  .custom-slide-up-enter
    animation-duration: 300ms
    animation-name: customSlideDownIn
    animation-timing-function: cubic-bezier(0,1.02,.74,1.01)
    animation-fill-mode: both
  .custom-slide-up-leave
    animation-duration: 300ms
    animation-name: customSlideDownOut
    animation-timing-function: cubic-bezier(0,1.02,.74,1.01)
    animation-fill-mode: both
  .results
    width: 100%
    outline: none
    user-select: none
    padding: 5px 0px
    margin: 0
    text-align: left
    background-color: #fff
    border-radius: 4px
    box-shadow: 0 1px 6px rgba(0,0,0,.2)
    background-clip: padding-box
    transition: all 300ms
    position: absolute
    top: 30px
    font-size: 12px
    p
      margin: 0
      padding: 8px 10px
    .items
      max-height: 240px
      overflow-y: scroll
      margin: 0
      padding: 0
      &::-webkit-scrollbar
        width: 0
    ul
      margin: 0
      padding: 0
      li
        padding: 2px 10px
        cursor: pointer
        transition: all 300ms
        text-overflow: ellipsis
        white-space: nowrap
        overflow: hidden
        line-height: 30px
        &:hover
          background-color: #ecf6fd
